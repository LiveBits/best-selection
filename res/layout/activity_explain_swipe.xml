<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:accordion="http://schemas.android.com/apk/res-auto"
    android:id="@+id/TabHost01"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp" >

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:padding="5dp" >

            <TextView
                android:id="@+id/textViewExplain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/entekhab_textview"
                android:scrollbars="vertical"
                android:text="@string/explain_text_dlg"
                android:textDirection="rtl" />

            <TextView
                android:id="@+id/textViewStructure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/entekhab_textview"
                android:scrollbars="vertical"
                android:text="@string/explain_text_dlg"
                android:textDirection="rtl" />

            <ScrollView
                android:id="@+id/accordion_scroll"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone" >

                <com.nakhl.behtarinentekhab.accordion.widget.AccordionView
                    android:id="@+id/accordion_view"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    accordion:header_layout_fold_button_id="@id/foldButton"
                    accordion:header_layout_id="@layout/accordion_header"
                    accordion:header_layout_label_id="@id/foldText"
                    accordion:section_bottom="@layout/accordion_footer"
                    accordion:section_container="@layout/accordion_section"
                    accordion:section_container_parent="@id/section_content"
                    accordion:section_headers="@array/accordion_sections"
                    accordion:section_visibility="@array/accordion_visibility"
                    android:background="#fff5f5f5"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/accord_element1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/accord_element2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/accord_element3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/accord_element4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/accord_element5"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/accord_element6"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/accord_element7"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/accord_element8"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/accord_element9"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/accord_element10"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/accord_element11"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/accord_element12"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/accord_element13"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/accord_element14"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/accord_element15"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/accord_element16"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>
                </com.nakhl.behtarinentekhab.accordion.widget.AccordionView>
            </ScrollView>
        </FrameLayout>

        <Button
            android:id="@+id/buttonOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/ok_button_dlg" />
    </LinearLayout>

</TabHost>